---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="figure">
  <Image class="image" src={src} alt={alt} />
  {
    caption && (
      <figcaption class="caption">
        <i>{caption}</i>
      </figcaption>
    )
  }
</figure>

<style>
  .figure {
    width: 100%;
    margin: 0;
    padding-top: 8px;
  }

  .image {
    display: block;
    width: 100%;
    height: auto;
    margin: 0px auto;
  }

  .caption {
    color: #565656;
    font-size: 0.9rem;
    width: fit-content;
    margin: 0px auto;
    padding: 0.5rem 0px;
  }
</style>
